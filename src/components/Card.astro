---
import sizeClass from "../utils/index.ts";

export interface Props {
  title: string;
  subtitle: string;
  description: string;
  date: string;
  image: string;
  size: string;
  link: string;
};

const { title, subtitle, description, date, image, size, link } = Astro.props;
---

<div class={`w-full ${sizeClass(size)} p-6 flex flex-col flex-grow flex-shrink`}>
  <div class="flex-1 bg-white rounded-t rounded-b-none overflow-hidden shadow-lg">
    <a href={link} class="flex flex-wrap no-underline hover:no-underline">
      <img src={image} class="h-64 w-full rounded-t pb-6">
      <div class="w-full font-bold text-xl text-gray-900 px-6">{title}</div>
      <p class="w-full text-gray-600 text-xs md:text-sm px-6">{subtitle}</p>
      <p class="text-gray-800 font-serif text-base px-6 mb-5">{description}</p>
    </a>
  </div>
  <div class="flex-none mt-auto bg-white rounded-b rounded-t-none overflow-hidden shadow-lg p-6">
    <div class="flex items-center justify-between">
      <img
        class="w-8 h-8 rounded-full mr-4 avatar"
        data-tippy-content="Author Name"
        src="https://www.gravatar.com/avatar/11da53ea60ddd61c557b2a19f36b8975?s=32"
        alt="Avatar of Author"
      >
      <p class="text-gray-600 text-xs md:text-sm">{date}</p>
    </div>
  </div>
</div>
