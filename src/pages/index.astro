---
import Header from "../components/Header.astro";
import Card from "../components/Card.astro";
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Reno Blog</title>
  </head>

  <body class="bg-gray-200 font-sans leading-normal tracking-normal">
    <Header />
    <div class="container px-4 md:px-0 max-w-6xl mx-auto -mt-32">
      <div class="mx-0 sm:mx-6">
        <div class="bg-gray-200 w-full text-xl md:text-2xl text-gray-800 leading-normal rounded-t">
          <!-- posts container -->
          <div class="flex flex-wrap justify-between pt-12 -mx-6">
            <Card
              title="Painting"
              subtitle="Living room and spare bedroom"
              description="First post for painting progress to get rid of the worst of the worst."
              date="2022-09-10"
              image="https://source.unsplash.com/collection/225/800x600"
              size="small"
              link="/posts/2022-09-10_painting"
            />
            <Card
              title="Yard"
              subtitle="Early days"
              description="Cleaning up all of the mess."
              date="2022-09-10"
              image="https://source.unsplash.com/collection/226/800x600"
              size="small"
              link="/posts/2022-09-10_yard"
            />
            <Card
              title="Junk Removal"
              subtitle="So much nonsense"
              description="Getting rid of many tragic fixtures."
              date="2022-09-10"
              image="https://source.unsplash.com/collection/227/800x600"
              size="small"
              link="/posts/2022-09-10_removal"
            />
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
